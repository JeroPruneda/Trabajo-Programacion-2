<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%-include("./partials/head.ejs")%>
<body>
	<%-include("./partials/header.ejs")%>
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"><%= data.productos[1].marca %> <%= data.productos[1].modelo %></h2> 
			<p class="product-detail-description">
				<a href="/productoDetalle/add">Agregar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="<%= data.productos[1].imagen%>" alt="" class="product-detail-img">
					<p class="product-detail-description">
						<%=data.productos.descripcion%></p>
				</article>
			
				<div class="col-12 col-lg-4">
					<% for(i=0; i < data.comentarios.length; i++) { %>
					<section class="comments">
						<article> 
							
							<img src="<%= data.comentarios[i].imagen %> " alt="">
							<div class="data">
								<p class="user">
									<strong> <a href="/profile"> <%= data.comentarios[i].persona %>   </a> </strong>
									<%= data.comentarios[i].comentario %> 
								</p>
							</div>
						</article>
					</section>
				</div>


			<% } %> 
				
						
					<form class="form" action="" method="POST">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				
			</div>
		</div>
	</div>
	<!-- /product detail -->
	<%-include("./partials/footer.ejs")%>
</body>	
</html>