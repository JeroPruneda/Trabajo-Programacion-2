<%- include('./partials/header.ejs') %>

<% if (productos.length != 0) { %>
  <h2 class="products-title"> Browse results for: </h2>
  <% for (let i = 0; i < productos.length; i++) { %>
    <div class="col-12 col-sm-6 col-lg-3">
      <section class="product-box">
        <a href="/productos/<%= productos[i].id %>">
          <figure class="product-box_image">
            <img src=<%= productos[i].imagenes %> alt="shoes">
          </figure>
          <article class="product-box_data">
            <h2> <%= productos[i].modelo  %>  </h2>
            <p> <%= productos[i].descripcion  %> </p>
            <p>Created by <%= productos[i].user?.usuario %> </p>
          </article>
        </a>
      </section>
    </div>
    <% } %>
    <% }  else {  %>
      <h2 class="products-title">No se encontraron resultados para tu busqueda</h2>
     <% } %> 
<%- include('./partials/footer.ejs') %>
