<!DOCTYPE html>
<html lang="es">
<%-include("./partials/head.ejs")%>

<body>
	<%-include("./partials/header.ejs")%>
	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Editar mi Producto</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<h2 class="col-12"> 
				Producto
			</h2>
			<form method="post" enctype="multipart/form-data">
				<label class="form-label">Marca</label>
				<input type="text" class="form-control" name="marca" id="marca" value="<%= productos.marca %>" />
				
				<label>Modelo</label>
				<input type="text" class="form-control" name="modelo" id="modelo" value="<%= productos.modelo %>" />
				
				<label>Descripcion</label>
				<input type="text" class="form-control" name="descripcion" id="descripcion" value="<%= productos.descripcion%>" />
				
				<label>Fecha</label>
				<input type="date" class="form-control" name="fecha" id="fecha" value=" <%= productos.fecha %> " />
			  
				<label>Imagen</label>
				<input type="file" class="form-control" name="imagenes" id="imagenes" />
				
				<button type="submit" class="btn btn-primary">Submit</button>
			  </form>
	<%-include("./partials/footer.ejs")%>
</body>
</html>