<!DOCTYPE html>
<html lang="es">

	<%-include("./partials/head.ejs")%>
	
<body>
	<%-include("./partials/header.ejs")%>
	
	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			  <div class="img-container offset-3 col-2">
				<img src="<%= usuario.perfil %>"  alt="foto de perfil"  class="foto-perfil">
			</div>  
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"> <%= usuario.usuario %> 
						<a href="/profile/<%= usuario.id %> /edit" >
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li>8 productos </li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

<!-- /Mis productos -->
<div class="container products-wrapper">
	<div class="row">
		<div class="col-12">
			<h2 class="products-title">Mis Zapatillas</h2>
		</div>
		<!-- Show the "ultimos" products -->
		<% for (let i = 0; i < usuario.objetos.length; i++) { %>
		<div class="col-12 col-sm-6 col-lg-3">
			<section class="product-box">
				<a href="/products/id/<%= usuario.productos[i].id %>">
					<figure class="product-box_image">
						<img src="/images/products/<%= usuario.objetos[i].imagenes %>"  alt="shoes">
					</figure>
					<article class="product-box_data">
						<h2> <%= usuario.objetos[i].marca  %>  </h2>
						<p> <%= usuario.objetos[i].modelo  %> </p>
						<p> <%= usuario.objetos[i].descripcion  %> </p>
						
						<p>Creador: <%= usuario.usuario %>  </p> 
					</article>
				</a>
			</section>
		</div>
		<% } %>
	</div>
</div>
 
	<!-- /Mis productos -->
	<%-include("./partials/footer.ejs")%>
</body>	
</html>