<!DOCTYPE html>
<html lang="es">

	<%-include("./partials/head.ejs")%>
	
<body>
	<% if (usuario!= null) { %>
		<%- include("./partials/header.ejs") %>
	<% } else { %>
		<%- include("./partials/headerLogueado.ejs")%>
	<% } %>
	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			  <div class="img-container offset-3 col-2">
				<img src=" " alt="foto de perfil" class="foto-perfil">
			</div>  
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= usuario.usuario %> 
						<a href="/profile/edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li>8 productos</li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
		<% for(i=0; i < productos.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/productoDetalle">
							<figure class="product-box_image">
								<img src="<%= usuario.productos[i].imagen%>" alt="zapatillas">
							</figure>
							<article class="product-box_data">
								<h2><%= usuario.productos[i].marca %> <%= usuario.productos[i].modelo %></h2>
								<p><%= usuario.productos[i].descripcion %></p>
								<p>Comentarios: 12</p>
							</article>
						</a>
					</section>
				</div>
			<% } %> 
		</div>
	</div> 
	<!-- /Mis productos -->
	<%-include("./partials/footer.ejs")%>
</body>	
</html>