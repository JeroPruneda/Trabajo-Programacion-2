<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous"> 
<%-include("./partials/head.ejs")%>

<body>

	<!-- Banner -->
	 <% if (logueado == true){  %>  
		<%- include("./partials/header.ejs")   %>  
		<% } else {  %>  
			<%- include("./partials/headerLogueado.ejs")  %>  
			<% }   %>  
	 
	<div class="banner">
		
	</div> 
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<% for(i=0; i < data.productos.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/productoDetalle">
							<figure class="product-box_image">
								<img src="<%= data.productos[i].imagen%>" alt="zapatillas">
							</figure>
							<article class="product-box_data">
								<h2><%= data.productos[i].marca %> <%= data.productos[i].modelo %></h2>
								<p><%= data.productos[i].descripcion %></p>
								<p>Comentarios: 12</p>
							</article>
						</a>
					</section>
				</div>
			<% } %> 
		</div>	
	</div>	
	<%-include("./partials/footer.ejs")%>
</body>	

