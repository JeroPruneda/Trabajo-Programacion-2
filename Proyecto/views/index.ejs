<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%-include("./partials/head.ejs")%>

<body>

	<!-- Banner -->
		<%-  include("./partials/header.ejs")  %>  
	<div class="banner">
		
	</div> 
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<% for(i=0; i < productos.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/productoDetalle/<%= productos[i].id%>" >
							<figure class="product-box_image"  >
								<img src= <%= productos[i].imagenes %> alt="zapatillas">
							</figure>
							<article class="product-box_data">
								<h2><%= productos[i].marca %> <%= productos[i].modelo %> </h2>
								<p><%= productos[i].descripcion %> </p>
								<p><%= productos[i].fecha %> </p>
								<a href="/profile/<%=productos[i].user?.id%>"> <%= productos[i].user?.usuario %></a>
								 <!-- <p> </p> tiene que aparecer el nombre del usuario que la subio  y un hypervinculo que nos lleve a su perfil-->
								 <!-- //este hypervinculo esta mal -->
							</article>
						</a>
					</section>
				</div>
			<% } %> 
		</div>	
	</div>	
	<%-include("./partials/footer.ejs")%>
</body>
